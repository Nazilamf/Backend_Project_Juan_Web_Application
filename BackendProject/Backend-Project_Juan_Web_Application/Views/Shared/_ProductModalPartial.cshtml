@model Product
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            &times;
        </button>
    </div>
    <div class="modal-body">
        <!-- product details inner end -->
        <div class="product-details-inner">
            <div class="row">
                <div class="col-lg-5">
                    <div class="product-large-slider mb-20">
                        <div class="pro-large-img img-zoom">
                            <img src="~/manage/assets/uploads/product/@Model.ProductImages.FirstOrDefault(x=>x.PosterStatus==true).ImageName"
                                 alt="product thumb" />
                        </div>
 
                    </div>
                  
                </div>
                <div class="col-lg-7">
                    <div class="product-details-des">
                        <h3 class="pro-det-title">@Model.Name</h3>
                        <div class="pro-review">
                            <span><a href="#">1 Review(s)</a></span>
                        </div>
                        <div class="price-box">
                            <span class="regular-price">AZN @Model.DiscountPrice</span>
                            <span class="old-price"><del>AZN @Model.SalePrice</del></span>
                        </div>
                        <p>
                           The best shoes
                        </p>
                       
                        <div class="availability mb-20">
                            <h5 class="cat-title">Availability:</h5>
                            <span>@(Model.StockStatus ? "In" : "Out") Stock</span>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- product details inner end -->
    </div>
</div>