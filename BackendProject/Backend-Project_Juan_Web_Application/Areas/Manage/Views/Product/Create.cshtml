@model Product
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Product Create</h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CategoryId">Category</label>
                        <select class="form-control" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="BrandId">Brand</label>
                        <select class="form-control" asp-for="BrandId" asp-items="new SelectList(ViewBag.Brands,nameof(Brand.Id),nameof(Brand.Name))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ColorId">Color</label>
                        <select class="form-control" asp-for="ColorId" asp-items="new SelectList(ViewBag.Colors,nameof(Color.Id),nameof(Color.Name))">
                        </select>
                    </div>
                   
                    <div class="form-group col-md-4">
                        <label asp-for="SizeIds">Size</label>
                        <select class="form-control" asp-for="SizeIds" asp-items="new SelectList(ViewBag.Sizes,nameof(Size.Id),nameof(Size.SizeName))">
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="SalePrice">SalePrice</label>
                        <input asp-for="SalePrice" class="form-control">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CostPrice">CostPrice</label>
                        <input asp-for="CostPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DiscountPrice">DiscountPrice</label>
                        <input asp-for="DiscountPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Gender">Gender</label>
                        <Select asp-for="Gender" class="form-control">
                        <option value="@(true)">Women</option>
                            <option value="@(false)">Men</option>
                            <option value="@(null)">Unisex</option>
                            </Select>
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Rate">Rate</label>
                        <input asp-for="Rate" class="form-control">
                        <span class="text-danger" asp-validation-for="Rate"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="IsNew">IsNew</label>
                        <input asp-for="IsNew" class="form-control">
                        <span class="text-danger" asp-validation-for="IsNew"></span>
                    </div>
                   
                    <div class="form-group col-md-4">
                        <label asp-for="StockStatus">StockStatus</label>
                        <input asp-for="StockStatus" class="form-control">
                        <span class="text-danger" asp-validation-for="StockStatus"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PosterFile">PosterFile</label>
                        <input asp-for="PosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="PosterFile"></span>
                    </div>
                   
                    <div class="form-group col-md-12">
                        <label asp-for="ImageFiles">ImageFiles</label>
                        <input asp-for="ImageFiles" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFiles"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


